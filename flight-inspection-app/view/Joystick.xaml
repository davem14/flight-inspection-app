                <Path.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-271.037"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Path.RenderTransform>
            </Path>

        </Canvas>
        <Canvas HorizontalAlignment="Left" Height="170" Margin="133,78,0,0" VerticalAlignment="Top" Width="190">
