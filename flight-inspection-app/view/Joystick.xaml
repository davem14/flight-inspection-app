<UserControl x:Class="flight_inspection_app.view.Joystick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:flight_inspection_app.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Slider x:Name="ThSlide" Value="{Binding VM_Throttle, Mode=OneWay}" HorizontalAlignment="Left" Margin="36,137,0,0" VerticalAlignment="Top" Height="52" Width="165" RenderTransformOrigin="0.5,0.5" Maximum="1" Minimum="0" TickFrequency="0.01" LargeChange="0.1">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-89.663"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Slider x:Name="TmSlide" Value="{Binding VM_Rudder, Mode=OneWay}" HorizontalAlignment="Left" Margin="121,264,0,0" VerticalAlignment="Top" Height="52" Width="194" RenderTransformOrigin="0.5,0.5" Maximum="1" Minimum="-1" TickFrequency="0.1" LargeChange="0.1">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.256"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Label Content="{Binding VM_Throttle}" HorizontalAlignment="Left" Margin="33,202,0,0" VerticalAlignment="Top" Height="26" Width="66" Foreground="#FF0A0101" Background="{x:Null}"/>
        <Label Content="{Binding VM_Aileron}" HorizontalAlignment="Left" Margin="257,37,0,0" VerticalAlignment="Top" Height="26" Width="66" Foreground="#FF0A0101" Background="{x:Null}"/>
        <Label Content="{Binding VM_Elevator}" HorizontalAlignment="Left" Margin="358,214,0,0" VerticalAlignment="Top" Height="26" Width="66" Foreground="#FF0A0101" Background="{x:Null}"/>
        <Label Content="{Binding VM_Rudder}" HorizontalAlignment="Left" Margin="230,283,0,0" VerticalAlignment="Top" Height="26" Width="66" Foreground="#FF0A0101" Background="{x:Null}"/>

        <TextBlock HorizontalAlignment="Left" Height="55" Margin="-29,73,0,0" TextWrapping="Wrap" Text="Throttle" VerticalAlignment="Top" Width="193" Foreground="#FF0A0000" FontSize="22" RenderTransformOrigin="0.5,0.5">

            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-87.941"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="56" Margin="141,278,0,0" TextWrapping="Wrap" Text="Rudder" VerticalAlignment="Top" Width="193" Foreground="#FF190202" FontSize="22" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-359.376"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
